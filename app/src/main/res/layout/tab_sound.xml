<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tabLightLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="95dp"
    android:gravity="bottom"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cloud_sleep_tight"
        />

    <RelativeLayout
        android:id="@+id/relativeLayoutForVolume"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >

        <TextView
            android:id="@+id/volumeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Volume"
            android:textAppearance="?android:attr/textAppearanceLarge" >
        </TextView>

        <SeekBar
            android:id="@+id/volumeSeekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_above="@+id/menu_actions_main"
            android:layout_marginTop="26dp"
            android:max="30" >
        </SeekBar>


        <ImageView
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_volume_up_black_24dp"
            />


        <TextView
            android:id="@+id/volumeTextMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/volumeSeekbar"
            android:text="0" >
        </TextView>

        <TextView
            android:id="@+id/volumeTextMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/volumeSeekbar"
            android:text="30" />
    </RelativeLayout>

    </LinearLayout>